extends layout.pug

block content
	if error
		div.alert.alert-danger(role='alert')
			p The following error(s) occured:
			pre= JSON.stringify(error, null, 2)
	form(action="/book/add", method="post")
		input(type="hidden" name='_csrf' value=csrfToken)
		.form-group
			label(for='title') Title
			input.form-control#title(type="text", name='title', value=book.title)
		.form-group
			label(for="author") Author
			input.form-control#author(type="text", name='author', value=book.author)
		.form-group
			label(for="releaseDate") Release Date
			input.form-control#releaseDate(type="text", name='releaseDate', value=book.releaseDate, placeholder='ex: 2000-01-31')
		.form-group
			label(for="pageCount") Page Count
			input.form-control#pageCount(type="text", name='pageCount', value=book.pageCount)
		.form-group
			label(for="publisher") Publisher
			input.form-control#publisher(type='text', name='publisher', value=book.publisher)
		.py-4
			button.btn.btn-primary(type="submit") Add Book
			a.btn.btn-warning(href='/') Cancel
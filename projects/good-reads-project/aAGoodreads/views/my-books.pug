extends layout.pug

append head
    link(rel='stylesheet' type='text/css' href='/public/css/footer.css')
    link(rel='stylesheet' type='text/css' href='/public/css/my-books.css')
    link(rel='stylesheet' type='text/css' href='/public/css/header.css')
    script(src='/public/js/my-books.js')

block content
    .content-container
        .content__left-bar
            .content__left-bar--bookshelves
                .content__bookshelves-default
                    h3(class='default__item default__item--header') Bookshelves
                    ul(class='default__item default__item--list')
                .content__added-bookshelves
                    ul.content__added-bookshelves--list
                    form.add-bookshelf-form
                        input(type='text' name='bookshelfName' id='bookshelfName' placeholder='Bookshelf Name')
                        button.add-shelf(type="submit") Add a shelf
        .content__book-table
            .book-table__header-container
                h3(class='book-table__item book-table__item--header') My Books:
                .book-table__shelf-name
            table(class='book-table__item book-table__item--table')
                thead
                    tr.no-border
                        th cover
                        th title
                        th author
                        th avg rating
                        th your rating
                        th shelves
                        th review
                        th date read
                        th date added
                tbody
